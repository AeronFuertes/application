<h1 align="center">All Users</h1>
<div align="center">
   <%= will_paginate %>
</div>
  <% @users.each do |user| %>
    <ul class="listing center">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.name, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete,
                  data: { confirm: "Are you sure you want to do this? This can delete all the articles of the user also. "}, class: "btn btn-sm btn-danger" %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
<div>
  <%= will_paginate%>
</div>
